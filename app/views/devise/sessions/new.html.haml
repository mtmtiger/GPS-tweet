.log-in
  .log-in__bg
    = image_tag('top-bg.jpg',class: "log-in-image")
  .log-in__title
    %h2 ログイン
  .log-in__mark
    .icon-user
  .log-in__bg-mark
    .icon-bg-pin
  .log-in__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .log-in__form__email
        = f.label :email do
          .icon-email
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail"
      .log-in__form__password
        = f.label :password do
          .icon-password
        = f.password_field :password, autocomplete: "current-password", placeholder: "password"
      .log-in__form__btn
        = f.submit "ログイン", class: "log-in-btn"
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .log-in__form__test-log-in
        .log-in__form__test-log-in__email
          = f.email_field :email, autocomplete: "email", type: "hidden", id: "test-user-email"
        .log-in__form__test-log-in__password
          = f.password_field :password, autocomplete: "current-password", type: "hidden", id: "test-user-password"
        .log-in__form__test-log-in__submit
          = f.submit "簡単ログイン", id: "test-user-log-in-btn"


